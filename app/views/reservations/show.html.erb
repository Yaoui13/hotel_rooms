<h1 style="text-align: center; margin-bottom: 30px;">Confirmation de votre réservation</h1>

<div class="reservation-confirmation">
  <h2><%= @room.name %></h2>
  <p><strong>Client :</strong> <%= @reservation.client_name %></p>
  <p><strong>Ville :</strong> <%= @room.city %></p>
  <p><strong>Date d'arrivée :</strong> <%= @reservation.start_date.strftime('%d/%m/%Y') %></p>
  <p><strong>Date de départ :</strong>   <%= @reservation.end_date.strftime('%d/%m/%Y') %></p>
  <hr>
  <p><strong>Prix par jour :</strong>     <%= @room.price %> €</p>
  <p><strong>Nombre de jours :</strong>  <%= (@reservation.end_date - @reservation.start_date).to_i %></p>
  <p><strong>Prix total :</strong>       <%= @reservation.total_price %> €</p>

  <div class="btn-container" style="margin-top:20px;">
    <%= link_to 'Retour à l’accueil', rooms_path, class: "btn" %>
  </div>
</div>
