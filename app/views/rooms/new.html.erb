<h1>Ajouter une nouvelle chambre</h1>

<%= form_with(model: @room, local: true) do |form| %>
  <div style="margin-bottom: 15px;">
    <%= form.label :name, "Nom de l'hôtel" %><br>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :city, "Ville" %><br>
    <%= form.text_field :city, class: "form-control", required: true %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :price, "Prix par nuit (€)" %><br>
    <%= form.number_field :price, class: "form-control", required: true %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :description, "Description" %><br>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :photo_url, "Lien vers une photo (URL)" %><br>
    <%= form.text_field :photo_url, class: "form-control" %>
  </div>

  <%= form.submit "Créer la chambre", class: "btn btn-success" %>
<% end %>

<%= link_to "← Retour à la liste", rooms_path, class: "btn btn-secondary", style: "margin-top: 15px;" %>

<% end %>
